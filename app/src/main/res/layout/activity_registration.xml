<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a13_da.socialnetwork.RegistrationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/registration_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Фамилия"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp" />
            <EditText
                android:id="@+id/registration_surname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@android:drawable/editbox_background_normal"
                android:textCursorDrawable="@android:color/black" />

            <TextView
                android:text="Имя"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp" />
            <EditText
                android:id="@+id/registration_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@android:drawable/editbox_background_normal"
                android:textCursorDrawable="@android:color/black" />

            <TextView
                android:text="Электронная почта"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp" />
            <EditText
                android:id="@+id/registration_mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@android:drawable/editbox_background_normal"
                android:textCursorDrawable="@android:color/black"
                android:inputType="textEmailAddress"/>

            <TextView
                android:text="Мобильный телефон"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp" />
            <EditText
                android:id="@+id/registration_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@android:drawable/editbox_background_normal"
                android:textCursorDrawable="@android:color/black"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="11"/>


            <Button
                android:id="@+id/registration_buttonregistration"
                android:text="Регистрация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="#3cbbdb"
                android:background="@drawable/round"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
